@model E_TutorApplicationFront.Models.ViewModel.RegisterViewModel
@{
    Layout = "_LoginLayout";
}

<div class="container-fluid imageside">
    <img src="~/images/register.svg" />
</div>

<div class="container-fluid">
    <div class="signUpForm">
        <h2>Create your account</h2>

        <form method="post" asp-action="Register" asp-asp-controller="Login">
            <div class="row">
                <div class="col-sm">

                    <label asp-for="Firstname" class="control-label">Full Name</label> <br />
                    <input type="text" placeholder="First name..." class="form-control textboxSignUp" asp-for="Firstname" />
                    <span asp-validation-for="Firstname" class="validationText text-danger"></span>

                </div>
                <div class="col-sm">
                    <label asp-for="LastName" class="control-label" style="color: transparent;">h</label><br />
                    <input asp-for="LastName"  type="text" placeholder="Last name..." class="form-control textboxSignUp"  />
                    <span asp-validation-for="LastName" class="validationText text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <label asp-for="Username" class="control-label">Username</label> <br />
                    <input asp-for="Username" type="text" placeholder="Username..." class="form-control textboxSignUp" />
                    <span asp-validation-for="Username" class="validationText text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <label asp-for="Email" class="control-label">Email</label> <br />
                    <input asp-for="Email" type="text" placeholder="Email..." class="form-control textboxSignUp" />
                    <span asp-validation-for="Email" class="validationText text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <label asp-for="Password" class="control-label">Password</label> <br />
                    <div class="password-container">
                        <input asp-for="Password" id="password" type="password" placeholder="First name..." class="form-control textboxSignUp password-input password" />
                        <span id="togglePassword" class="toggle-icon"><i class="fas fa-eye"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="validationText text-danger"></span>

                </div>
                <div class="col-sm">
                    <label asp-for="RePassword" class="control-label">Confirm Password</label> <br />
                    <div class="password-container">
                        <input asp-for="RePassword" id="rePassword" type="password" placeholder="Last name..." class="form-control textboxSignUp  password-input password" />
                        <span id="toggleRePassword" class="toggle-icon"><i class="fas fa-eye"></i></span>
                    </div>
                    <span asp-validation-for="RePassword" class="validationText text-danger"></span>
                </div>
            </div>
            
            <div class="row submitrow">
                <div class="col-sm">

                    <input type="checkbox" class="form-check-input checkBox" asp-for="Conditions" /> <span style="font-size: 11px;">I Agree with all of your <span style="color: #564FFD">Terms & Conditions</span></span>
                    <span asp-validation-for="Conditions" class="validationText text-danger"></span>
                </div>
                <div class="col-sm buttoncol">
                    <button id="signUpBtn" type="submit" >Create Account <img src="~/images/arrowright.svg" /></button>

                </div>
            </div>

        </form>
    </div>

</div>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    const toggleRePassword = document.querySelector('#toggleRePassword');
    const rePassword = document.querySelector('#rePassword');

    togglePassword.addEventListener('click', function (e) {

        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);

        this.querySelector('i').classList.toggle('fa-eye');
        this.querySelector('i').classList.toggle('fa-eye-slash');
    });
    toggleRePassword.addEventListener('click', function (e) {

        const type = rePassword.getAttribute('type') === 'password' ? 'text' : 'password';
        rePassword.setAttribute('type', type);

        this.querySelector('i').classList.toggle('fa-eye');
        this.querySelector('i').classList.toggle('fa-eye-slash');
    });


</script>