<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E Tutor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/layoutsheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbarclass">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Become an Instructor</a>
                        </li>
                    </ul>
                   <div class="dropdown" style="margin-right: 20px;">
                      <select name="currency" id="currency">
                          <option value="usd">USD</option>
                          <option value="azn">AZN</option>
                          <option value="tl">TL</option>
                      </select>
                    </div>

                   <div class="dropdown">
                      <select name="language" id="language">
                          <option value="en">English</option>
                          <option value="az">Azerbaijani</option>
                          <option value="tr">Turkish</option>
                      </select>
                    </div>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="container-fluid siteLogo" style="margin-left: 20px;">
            <a class="navbar-brand topsitename" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 22px;">
            <img src="~/images/graduationcap.svg" width="38px" style="padding-bottom: 7px;" />
            E-tutor</a>
        </div>
        
        <div class="container-fluid siteBrowse"> 
             <div class="dropdown" style="margin-right: 20px; border: 1px solid #E9EAF0; padding: 12px;">
                      <select name="browse" id="browse">
                          <option value="">Browse</option>
                      </select>
             </div>

             <input class="searchBar" type="text" id="searchBar"  placeholder="What do you want learn..."/>


        </div>

    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
