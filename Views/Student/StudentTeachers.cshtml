@model List<StudentTeachersViewModel>
@{
    Layout = "_StudentLayout";
}
<style>
    .studentCoursesSearch {
        padding-bottom: 20px;
        display: inline-block;
    }

    .results .searchBar {
        width: 100% !important;
    }

    .results .dropdown {
        margin-top: 20px;
    }

    .filterDropdown {
        border: 1px solid #E9EAF0;
    }

        .filterDropdown select {
            font-size: 14px;
            border: none;
            border-radius: 0;
        }

    .coursesCount {
        padding-top: 0px !important;
    }

    #allTeacher {
        padding: 7px 50% 10px 7px;
    }

    #Latest {
        padding: 7px 52% 10px 7px;
    }

    .courseTableBody {
        margin-top: 40px;
    }

    .btn-sendMessage {
        background-color: #FFEEE8;
        color: #FF6636;
        font-weight: bold;
        border-radius: 1px;
        border: none;
        padding: 10px 15%;
        font-size: 11px;
        text-decoration: none;
        width: 90%;
        margin-right: auto;
        margin-left: auto;
        display:inline-block;
    }

        .btn-sendMessage:visited {
            color: #FF6636;
        }

        .btn-sendMessage:hover {
            background-color: #FF6636;
            color: white;
            text-decoration: none;
        }

    .card {
        border: 1px solid #E9EAF0;
        border-radius: 0px;
        box-shadow: none;
        overflow: hidden;
        position: static;
        width: 235px;
        text-align: center;
    }

        .card img {
            height: 240px;
            width: 100%;
            object-fit: cover;
            border-radius: 0;
        }

    .card-header{
        padding:0px;
        background-color:transparent;
    }

   .card-header h5{
       padding-top: 15px;
       padding-bottom: 0px;
       font-size: 14px;
            color: 1D2026;
   }
   .card-header span{
       font-size: 12px;
            color: #8C94A3;
   }
    .div-button{
        text-align: center!important;
        padding-top: 10px;
    }

    .div-mainbody .col1{
        text-align:left;
        font-size: 12px;
    }
    .div-mainbody .col2{
        text-align:right;
        font-size: 12px;
        padding:0px;
    }

    #span-count{
        color: #4E5566;
        font-weight: 600;
    }

    #span-name{
        color: #8C94A3;
        font-weight: 600;
    }

    .courseList {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .pagination-container {
        margin-top: 20px;
        font-size: 14px;
    }

    .pagination .page-item .page-link {
        color: #ff6b6b;
    }

    .pagination .page-item.active .page-link {
        background-color: #FF6636;
        border-color: #FF6636;
        color: #fff;
    }

    .pagination .page-item:hover .page-link {
        color: #ff6b6b;
    }

        .pagination .page-item:hover .page-link .specialLink {
            color: white;
        }

    .pagination .page-link {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        text-align: center;
        padding: 10px;
        margin: 0px 10px;
    }

    .pagination .specialLink {
        border: none;
    }

    .page-item.disabled .page-link {
        color: #ccc;
    }

</style>
<div class="results">
    <h5 class="coursesCount">Teachers</h5>
    <div class="row">
        <div class="col col-6">
            <span class="studentCoursesSearch">Search</span> <br />

        </div>
        <div class="col col-3">
            <span class="studentCoursesSearch">Sort by:</span> <br />

        </div>
        <div class="col col-3">
            <span class="studentCoursesSearch">Teacher:</span> <br />

        </div>

    </div>
    <div class="row">
        <div class="col col-6">

            <input class="searchBar" type="text" id="searchBar" placeholder="What do you want learn..." />
        </div>
        <div class="col col-3">

            <div class="filterDropdown" style="">
                <select name="Latest" id="Latest">
                    <option value="">All Courses</option>
                </select>
            </div>
        </div>
        <div class="col col-3">

            <div class="filterDropdown" style="">
                <select name="browse" id="allTeacher">
                    <option value="">All Teachers</option>
                </select>
            </div>
        </div>
    </div>
    <div class="courseTableBody">
        <div class=" courseList">
            @if(Model is not null)
            {
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-header">
                            <img src="https://via.placeholder.com/400x200" alt="Lecture Image" class="card-img-top">
                            <h5>@item.TeacherFullname</h5>
                            <span>Digital Product Designer</span>
                        </div>
                        <div class="card-body">
                            <div class="row div-mainbody">
                                <div class="col col1">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="23" height="23">
                                        <polygon points="50,15 61,35 84,35 66,50 71,72 50,60 29,72 34,50 16,35 39,35" fill="orange" />
                                    </svg>
                                    <span id="StarPoint"><b>@item.TeacherPoint</b></span>
                                </div>
                                <div class="col col2">
                                    <span id="span-count">@item.StudentsCount</span>
                                    <span id="span-name">students</span>
                                </div>
                            </div>

                            <div class="row div-button">
                                <a class="btn-sendMessage">Send Message</a>
                            </div>

                        </div>

                    </div>
                }
            }
            
            

        </div>
    </div>
    <div class="pagination-container">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link specialLink" href="@Url.Action("StudentTeachers", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">

                        <img src="~/images/arrowleft.svg" id="arrowLeft" />
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("StudentTeachers", new { page = i })">@i.ToString("D2")</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link specialLink" href="@Url.Action("StudentTeachers", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">

                        <img src="~/images/arrowrightpaging.svg" id="arrowRight" />
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#filterButton").click(function () {
            // var filterContainer = $("#filterContainer");
            // if (filterContainer.is(":visible")) {
            //     filterContainer.hide();
            // } else {
            //     filterContainer.show();
            // }
            var filterContainer = $("#filterContainer");
            filterContainer.toggle();
        });
    });

</script>